generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
enum Subject {
  ENGLISH
  ARABIC
  MATH
  FRENCH
  BIOLOGY
  PHYSICS
  CHEMISTRY
  GEOGRAPHY
  CIVICS
  HISTORY
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  email       String   @unique
  password    String
  grade Int
  admin Boolean @default(false)
  posts       Post[]
  requests Request[]
  replies Reply[]
  followers   User[]   @relation("followers")
  following   User[]   @relation("followers")
  viewedPosts Post[]   @relation("viewedUsers")
  likedPosts  Post[]   @relation("likedUsers")
  likedReplies Reply[] @relation("likesReply")
  PostReports PostReport[]
  RequestReports RequestReport[]
  ReplyReports ReplyReport[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          String   @id @default(uuid())
  title       String?
  content     String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String
  subject Subject
  imagesUrl   String[]
  likes Int     @default(0)
  likedUsers User[]   @relation("likedUsers")
  viewedUsers User[]   @relation("viewedUsers")
  reports PostReport[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
model Request {
  id String @id @default(uuid())
  title String 
  content String
  author User @relation(references: [id], fields: [authorId])
  authorId String
  subject Subject
  replies Reply[] @relation("replies")
  reports RequestReport[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Reply {
  id String @id @default(uuid())
  request Request @relation("replies", fields: [requestId], references: [id])
  requestId String
  content String
  likes Int @default(0)
  likedUsers User[] @relation("likesReply")
  authorId String
  author User @relation(fields: [authorId], references: [id])
  reports ReplyReport[]
  imageUrls String[]
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt
}

model PostReport {
  id String @id @default(uuid())
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String
  reporter User @relation(fields: [reporterId], references: [id])
  reporterId String
  createdAt DateTime @default(now())
}
model RequestReport {
  id String @id @default(uuid())
  request Request @relation(fields: [requestId], references: [id], onDelete: Cascade)
  requestId String
  reporter User @relation(fields: [reporterId], references: [id])
  reporterId String
  createdAt DateTime @default(now())
}
model ReplyReport {
  id String @id @default(uuid())
  reply Reply @relation(fields: [replyId], references: [id], onDelete: Cascade)
  replyId String
  reporter User @relation(fields: [reporterId], references: [id])
  reporterId String
  createdAt DateTime @default(now())
}